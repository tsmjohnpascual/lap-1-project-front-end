<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/701be9d26f.js" crossorigin="anonymous" defer></script>
    <script src="./scripts/modal.js" defer></script>
    <script src="./scripts/script.js" defer></script>
    <title>X-Force</title>
</head>
<body>
        <header>
            <div class="container" id="header-container">
                <a href="/" class="nav-links">X-Diary</a>
                <i class="fas fa-user-ninja fa-3x logo-icon"></i>
                <a href="/post" class="nav-links">Create Post</a>
            </div>
        </header>
        <main>
            <div class="container journals">

            <%    for (let i = 0; i < posts.length; i++) { %>
                    <div class="journal-container">
                        <div class="entry">
                            <div>
                                <a href="/postPage/<%=posts[i].title%>" class="entry-title">
                                    <h2><%=posts[i].title%></h2>
                                 </a>
                            </div>
                             <div class="entry-info">
                                <i class="far fa-user fa-lg icon"></i>
                                <div>
                                    <span>willow oceanseed</span> <br>
                                    <span><%= posts[i].time %></span>
                                </div>
                             </div>
                             <div>
                                <p><%=posts[i].text.substring(0, 100) + " ..."%></p>
                             </div>
                             <div>
                                <a href="/postPage/<%=posts[i].title%>" class="read-more">Read More</a>
                             </div>
                            <div class="entry-interactions">
                                <div class="emoji-divs comment"><a href="" class="comment-link"><i class="fa-regular fa-comment fa-lg">0</i></a></div>
                                <div class="emoji-divs like"><i class="fa-regular fa-thumbs-up fa-lg like-reaction">0</i></div>
                                <div class="emoji-divs heart"><i class="fa-regular fa-heart fa-lg heart-reaction">0</i></div>
                                <div class="emoji-divs hate"><i class="far fa-thumbs-down fa-lg hate-reaction">0</i></div>
                            </div>
                        </div>
                    </div>
            <%    } %>

            </div>
        </main>
        <footer class="footer-container">
            <div class="container">
                <p class="footer-paragraph">Copyright <i class="far fa-copyright"></i> 2022 X-Force. All rights reserved.</p>
            </div>
        </footer>

    <!-- modal -->

    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
          <span class="close">&times;</span>
          <form>
            <input type="text" name="search" id="search" placeholder="Search for gifs..">
            <button id="btnSearch" type="submit">Search</button>
          </form>
          <div class="modal-container">
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif0"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif1"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif2"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif3"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif4"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif5"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif6"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif7"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif8"></div>
            <div class="gif-divs"><img src="" alt="" class="gif-size" id="gif9"></div>
          </div>
        </div>
    </div>

</body>
</html>