<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <script
      src="https://kit.fontawesome.com/701be9d26f.js"
      crossorigin="anonymous"
      defer
    ></script>
    <script src="./scripts/modal.js" defer></script>
    <script src="./scripts/script.js" defer></script>
    <title>X-Force</title>
  </head>
  <body>
    <div class="page-container">
      <header>
        <div class="container">
          <nav>
            <h1>X-Diary</h1>
            <a href="/post" id="createPostLink"><h2>Create a Post</h2></a>
          </nav>
        </div>
      </header>
      <main>
        <div class="journals">
          <% for (let i = 0; i < currentData.posts.length; i++) { %>
          <div class="journal-container">
            <div class="entry">
              <a
                href="/postPage/<%=currentData.posts[i].title%>"
                class="entry-title"
              >
                <h2><%=currentData.posts[i].title%></h2>
              </a>
              <div class="entry-info">
                <i class="far fa-user fa-lg icon"></i>
                <div>
                  <span>willow oceanseed</span> <br />
                  <span>2 hours ago</span>
                </div>
              </div>
              <p><%=currentData.posts[i].text.substring(0, 100) + " ..."%></p>
              <a href="/postPage/<%=currentData.posts[i].title%>">Read More</a>
              <div class="entry-interactions">
                <div class="emoji-divs comment">
                  <a href="" class="comment-link"
                    ><i class="fa-regular fa-comment fa-lg"></i></a
                  ><span>0</span>
                </div>
                <div class="emoji-divs like">
                  <i class="fa-regular fa-thumbs-up fa-lg"></i><span>0</span>
                </div>
                <div class="emoji-divs heart">
                  <i class="fa-regular fa-heart fa-lg"></i><span>0</span>
                </div>
                <div class="emoji-divs hate">
                  <i class="fa-regular fa-hand-middle-finger fa-lg"></i
                  ><span>0</span>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </main>
      <footer>
        <div class="container">
          <p class="footer-paragraph">
            Copyright <i class="far fa-copyright"></i> 2022 X-Force. All rights
            reserved.
          </p>
        </div>
      </footer>
    </div>

    <!-- modal -->

    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close">&times;</span>
        <form>
          <input
            type="text"
            name="search"
            id="search"
            placeholder="Search for gifs.."
          />
          <button id="btnSearch" type="submit">Search</button>
        </form>
        <div class="modal-container">
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif0" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif1" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif2" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif3" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif4" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif5" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif6" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif7" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif8" />
          </div>
          <div class="gif-divs">
            <img src="" alt="" class="gif-size" id="gif9" />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
